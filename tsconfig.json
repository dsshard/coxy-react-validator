{
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": true,
    "module": "CommonJS",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "sourceMap": false,
    "composite": false,
    "incremental": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "./src",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "jsx": "react-jsx"
  },
  "include": ["src", "src/**/*"],
  "exclude": ["node_modules", "dist"]
}
